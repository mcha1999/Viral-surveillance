# Viral Weather Backend Environment Variables

# App
DEBUG=true
ENVIRONMENT=development

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql://viral_weather_app:password@localhost:5432/viral_weather

# Redis
REDIS_URL=redis://localhost:6379

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# External APIs
AVIATIONSTACK_API_KEY=your_aviationstack_key
SOCRATA_APP_TOKEN=your_socrata_app_token
MAPBOX_TOKEN=your_mapbox_token

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Data
DATA_STALENESS_WARNING_DAYS=14
DATA_STALENESS_HIDE_DAYS=30
